@model VideoGames_MVC.Models.VideoGameGenreViewModel

@{
    ViewData["Title"] = "Video game List";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
  <form asp-controller="VideoGamesScaffolded" asp-action="Index" method="get">
    <p>
        <label asp-for="VideoGameGenre">Video Game Genres</label>
        <select asp-for="VideoGameGenre" asp-items="Model.Genres"> 
            <option value="">All</option>
        </select>


        <label asp-for="SearchString">Search Bar</label>
        <input type="search" asp-for="SearchString"   />
        <input type="submit" value=" Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VideoGames[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoGames[0].AgeRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoGames[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoGames[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoGames[0].Price)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.VideoGames[0].MultiPlayer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.VideoGames) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgeRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.MultiPlayer)
            </th>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
